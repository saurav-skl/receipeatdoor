<section class="hero py-16 max-h-80">
  <div class="container mx-auto flex items-center justify-between max-w-7xl ">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Are you hungry?</em></h6>
      <h1 class="text-6xl font-bold md:text-6xl">Don't Wait</h1>
      <button
        class="text-center text-white mt-2 px-2 py-1 rounded-full btn__primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2">
      <img src="img/hero-pizza.png" alt="pizza image" />
    </div>
  </div>
</section>

